{
    "name": "sorokinmedia/yii2-promocodes",
    "description": "Promocodes component for Yii2",
    "type": "yii2-extension",
    "keywords": ["yii2", "yii 2", "promocode"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ruslan Gilyazetdinov",
            "email": "ma3obblu@gmail.com",
            "homepage": "https://www.facebook.com/Ma3oBblu"
        }
    ],
    "support": {
        "issues": "https://github.com/sorokinmedia/yii2-promocodes/issues?state=open",
        "source": "https://github.com/sorokinmedia/yii2-promocodes"
    },
    "require": {
        "yiisoft/yii2": ">=2.0.30",
        "sorokinmedia/yii2-ar-relations": "dev-master",
        "sorokinmedia/yii2-helpers": "dev-master",
        "sorokinmedia/yii2-user": "dev-master",
        "sorokinmedia/yii2-treeview": "dev-master"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "8.*"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "sorokinmedia\\promocodes\\": "src/",
            "sorokinmedia\\promocodes\\entities\\": "src/entities/",
            "sorokinmedia\\promocodes\\forms\\": "src/forms/",
            "sorokinmedia\\promocodes\\handlers\\": "src/handlers/",
            "sorokinmedia\\promocodes\\exceptions\\": "src/exceptions/",
            "sorokinmedia\\promocodes\\migrations\\": "src/migrations/",
            "sorokinmedia\\promocodes\\tests\\": "tests/",
            "sorokinmedia\\promocodes\\tests\\entities\\": "tests/entities",
            "sorokinmedia\\promocodes\\tests\\handlers\\": "tests/handlers"
        }
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
